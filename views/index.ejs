<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <!-- <ul>
      <% docs.forEach(function(customer){ %>
        <li>
          <%= customer.nome %>
        </li>
      <% }) %>
    </ul> -->

    <table style="width: 50%;">
      <thead>
        <tr style="background-color: #CCC;">
          <td style="width: 50%;">Nome</td>
          <td style="width: 15%;">Idade</td>
          <td style="width: 15%;">UF</td>
          <td style="width: 20%;">Ações</td>
        </tr>
      </thead>
      <tbody>
        <%  if(!docs || docs.length == 0) { %>
          <tr>
            <td colspan="4"> nenhum cliente cadastrado.</td>
          </tr>
        <% } else { docs.forEach(function(customer){ %>
          <tr>
            <td style="width: 50%;">  <%= customer.nome %>  </td>
            <td style="width: 15%;">  <%= customer.idade %> </td>
            <td style="width: 15%;">  <%= customer.uf %>    </td>
            <td style="width: 20%;">  
              <a href="/edit/<%= customer._id %>">Editar</a> 
              <a href="/delete/<%= customer._id %>" 
                onclick="return confirm('Tem certeza que deseja excluir?');">Excluir</a> 
            </td>
          </tr>
        <%  } ) } %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="4">
              <a href="/new">Cadastrar novo cliente</a>
          </td>
        </tr>
      </tfoot>
    </table>
  </body>
</html>
